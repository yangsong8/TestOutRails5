<h1> Portfolio Items </h1>

<%#<a href = "portfolios/new"> Create a new porfolio item</a>%>
<%= link_to "Create a new portfolio item", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>

  <p> <%= link_to portfolio_item.title, portfolio_path(portfolio_item.id)%></p>
  <p><%= link_to "[Edit]", edit_portfolio_path(portfolio_item.id) %></p>
  <p><%= link_to '[Delete]', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p> <%= portfolio_item.subtitle %> </p>
  <p> <%= portfolio_item.body %> </p>
  <%= image_tag portfolio_item.main_image unless portfolio_item.main_image.nil?%>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
<% end %>