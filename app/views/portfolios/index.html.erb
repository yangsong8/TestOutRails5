<h1> Portfolio Items </h1>

<%#<a href = "portfolios/new"> Create a new porfolio item</a>%>
<%= link_to "Create a new portfolio item", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>

  <p> <%= portfolio_item.title %> <%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %></p>
  <p> <%= portfolio_item.subtitle %> </p>
  <p> <%= portfolio_item.body %> </p>
  <%= image_tag portfolio_item.main_image unless portfolio_item.main_image.nil?%>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
<% end %>